<!DOCTYPE html>
<html>
<head>
     <%- include('../partials/head') %>
     <%- include('../partials/navBar') %>
     <%- include('../partials/sideBar') %>
     <script>
     $(document).ready(function(){
      $('.slider').slider({ 
        indicator:false,
        height:600,
        transition:500,
        interval:6000,
         fullWidth: true
      });
    });
  </script>     
</head> 
<body class="view">

<!-- Search -->
  <section class="search" class="section section-searc black-text center scrollspy">
  <div class="container">
    <div class='row'>
      <div class="col s12">
        <div class="input-field-form">
          <input type="text" name='location' placeholder='search locations...' value='<%= searchOptions.location %>'>
          <button type='submit'>Search</button>
        </div>
     <div class="navbar-fixed">
        <nav class="pink lighten-1 z-depth-5">
          <div class="container">
          <div class="nav-wrapper">
            <a href="/" class="brand-logo">TravelSwap</a>
            <a href="/" data-target="mobile-nav"class="sidenav-trigger"><i class="material-icons">menu</i>
            </a>
            <ul class="right hide-on-med-and-down">
              <li><a href="/listings">View Swaps</a> </li>
              <li><a href="/listings/newlisting">Add Swap</a></li>
              <li><a href="reviewsF/new.ejs">Reviews</a></li>
              <li><a href="#">Help</a></li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
</section>

  <div class="row">
    <div class='col'>
      <div class=".show-all-flex">
  <% listings.forEach(listing => { %>
    <a href='/listings/<%= listing.id %>' class='listingItem'>
      <span class='title'><%= listing.name %></span>
      <span class='datePosted'><%= `Posted: ${listing.datePosted}` %></span>
      <span class='listLocation'><%= listing.location %></span>
      <span class='listDescription'><%= listing.description %></span>
      <span class='timeSpan'><%= `${listing.startDate} - ${listing.endDate}` %></span>
      <img  class="img" src="<%= listing.img %>" alt"<%= listing.name %>"></img>
    </a>
<% }) %>
 </div>
 </div>
